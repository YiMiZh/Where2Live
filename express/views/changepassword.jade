doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title User profile
        link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
        link(rel='stylesheet prefetch', href='http://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.3/animate.min.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
        link(rel='stylesheet', href='/css/index_style.css')
        script(src="/js/userprofile.js")
        script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
        link(rel='stylesheet', href='/css/userprofile.css')
    body
        include ./partials/navbar.jade

            // profile pic
        .portrait
            img(src='/sources/banner.png')
        .content
            .properties-section
                .container
                    .properties-grids
                        .col-md-3.userprofile-left

                        .col-md-9.userprofile-right
                            div
                                form(method='post', action='/changepassword', autocomplete='off')
                                  //textarea#oldpassword(name='oldpassword')  Your old password
                                  input(type="password", name="oldpassword", placeholder=" old password")
                                  br         
                                  //textarea#newpassword(name='newpassword') Your new password
                                  input(type="password", name="newpassword", placeholder=" new password")
                                  br         
                                  //textarea#newpassword2(name='newpassword2') Confirm new password
                                  input(type="password", name="newpassword2", placeholder="confirm new password")
                                  br         
                                  input(type='submit', name='submit')
                    .clearfix
        .copyright.py-4.text-center.text-white
