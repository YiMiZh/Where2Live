doctype html
html(lang='en')
  head

      title Where2Live: A Housing Sharing Website

      link(rel="stylesheet prefetch", href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")

      link(rel="stylesheet prefetch", href="http://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.3/animate.min.css")

      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css")
      script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
      link(rel="stylesheet", href="/css/homeSearch.css")

  body
    // nav
    include ./partials/navbar.jade
    // profile pic
    .portrait
      img(src="/sources/banner.png")
    // items
    .row
      //
        <div class="side">
        <h2>Condo</h2>
        <img class="fakeimg" style="height:200px;" src="samples/location1.png"></img>
        <h5>40 St George St, Toronto, ON M5S 2E4</h5>
        <h2>Description</h2>
        <p>Located In The Heart Of Downtown Toronto. 24 Hour Concierge. Steps To The Lake, Scotiabank Arena, Union Station</p>
        </div>
      .main
        h2 Searching Avaliable Homes:
        form#home_search(action='/homesearch', method='get')
          a Min Monthly Price:
          input#min_price(type='text', placeholder='Min Monthly Price', value=0, name='min')
          a Max Monthly Price:
          input#max_price(type='text', placeholder='Max Monthly Price', value=999999 name='max')
          a Home Type:
          select#home_type(name='type')
            option(value='all') All
            option(value='condo') Condo
            option(value='house') House
          //
            <a >Avaliable From: </a>
            <input id='avaliable_from' type="date">
          input.btn.btn-primary(type='submit', value='Search Homes', name=submit)
        html
          head
          body
            h2 Results:
            #homes
              each val in houses
                .home
                  table.table_in_home
                    tbody
                      tr
                        td
                          h3 #{val.name}
                          p
                            span.bold #{val.location}
                          p
                            | Type:
                            span.bold #{val.type}
                          p
                            | Monthly Price:
                            span.bold $#{val.rate}
                        td
                          img.HomeContentPicture(src=val.pic)
                          a(href='/houseinfo/'+val.id) detail
                          br
    .footer
